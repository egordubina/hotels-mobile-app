<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Hotels.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.Hotels.Toolbar.Title</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Widget.Hotels.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Hotels.Button.Text</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Hotel.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hotels.Button</item>
    </style>

    <style name="Widget.Hotels.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hotels.LinearProgressIndicator</item>
        <item name="trackColor">@color/white</item>
    </style>

    <style name="Widget.Hotels.Card" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hotels.Card</item>
    </style>

    <style name="Widget.Hotels.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:enabled">false</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="Widget.Hotels.Chip.Rating">
        <item name="android:textColor">@color/ratingChipColor</item>
        <item name="chipBackgroundColor">@color/ratingChipColorBackground</item>
        <item name="chipIcon">@drawable/icon__star</item>
        <item name="chipIconTint">@color/ratingChipColor</item>
    </style>

    <style name="Widget.Hotels.Chip.Default">
        <item name="android:textColor">@color/defaultChipColor</item>
        <item name="chipBackgroundColor">@color/defaultChipColorBackground</item>
    </style>

    <style name="Widget.Hotels.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#FFF6F6F9</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Hotel.EditText.Corner</item>
    </style>

</resources>