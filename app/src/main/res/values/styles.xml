<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Hotels.Title" parent="">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="TextAppearance.Hotels.Toolbar.Title" parent="">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TextAppearance.Hotels.Button.Text" parent="">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ShapeAppearance.Hotel.Button" parent="">
        <item name="cornerSize">@dimen/medium_corner_size</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="ThemeOverlay.Hotels.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSurface">@color/white</item>
    </style>


    <style name="Widget.Hotels.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Hotels.Toolbar.Title</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Widget.Hotels.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Hotels.Button.Text</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Hotel.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hotels.Button</item>
    </style>

    <style name="Widget.Hotels.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="colorPrimary">@color/blue</item>
        <item name="trackColor">@color/white</item>
    </style>
</resources>